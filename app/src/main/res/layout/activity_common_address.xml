<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommonAddressActivity" >

    <TextView
        style="@style/TitleBarStyle"
        android:text="号码归属地查询" />

    <EditText
        android:id="@+id/tools_address_number_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_edit_select"
        android:ems="10"
        android:hint="请输入电话号码"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="phone" >
        <requestFocus />
    </EditText>
    <Button 
        android:id="@+id/tools_address_query_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="查询号码"
        android:layout_below="@+id/tools_address_number_et"
        android:layout_margin="10dp"
        android:background="@drawable/perform_button_select"
        android:textColor="@color/white"
        />
    <TextView 
        android:id="@+id/tools_number_tv"
        style="@style/NormalTextStyle"
        android:text="电话号码:"
        android:layout_margin="8dp"
        android:layout_below="@id/tools_address_query_btn"
        />

</RelativeLayout>